---
import Sidebar from "../components/layout/Sidebar.astro";
import BaseLayout from "./BaseLayout.astro";

interface Props {
  title: string;
}
---

<BaseLayout title={Astro.props.title}>
  <div class="min-h-screen">
    <div class="max-w-5xl mx-auto px-6 py-12">
      <div class="grid grid-cols-1 lg:grid-cols-[1fr_1.3fr] gap-20">
        <!-- Left Sidebar -->
        <aside class="lg:sticky lg:top-12 lg:h-fit">
          <slot name="sidebar">
            <Sidebar />
          </slot>
        </aside>

        <!-- Right Content -->
        <main>
          <slot />
        </main>
      </div>
    </div>
  </div>
</BaseLayout>
