---
interface Props {
  title: string;
  description: string;
  slug: string;
}

const { title, description, slug } = Astro.props;
---

<article class="group">
  <a
    href={`/blog/${slug}`}
    class="block p-4 rounded-lg border border-zinc-400/60 dark:border-zinc-700/60 backdrop-blur-sm bg-white/50 dark:bg-zinc-900/50 hover:border-accent/50 dark:hover:border-accent/50 transition-all duration-200"
  >
    <div class="flex items-start gap-3">
      <!-- Red dot indicator -->
      <div class="w-2 h-2 rounded-full bg-red-500 mt-2 shrink-0"></div>

      <div class="space-y-2 flex-1">
        <h3
          class="text-lg font-semibold text-zinc-900 dark:text-zinc-100 group-hover:text-accent dark:group-hover:text-accent transition-colors"
        >
          {title}
        </h3>
        <p class="text-sm text-zinc-600 dark:text-zinc-400 line-clamp-2">
          {description}
        </p>
      </div>
    </div>
  </a>
</article>
