---
// Simple footer for blog post pages
import { Icon } from "astro-icon/components";
---

<footer class="border-t border-zinc-200 dark:border-zinc-800 mt-16 py-12 px-6">
  <div class="max-w-7xl mx-auto">
    <div class="flex flex-col md:flex-row items-center justify-between gap-4">
      <div class="flex items-center gap-4">
        <a
          href="https://github.com/yourusername"
          target="_blank"
          rel="noopener noreferrer"
          class="text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
          aria-label="GitHub"
        >
          <Icon name="tabler:brand-github" class="w-5 h-5" />
        </a>
        <a
          href="https://linkedin.com/in/yourusername"
          target="_blank"
          rel="noopener noreferrer"
          class="text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
          aria-label="LinkedIn"
        >
          <Icon name="tabler:brand-linkedin" class="w-5 h-5" />
        </a>
        <a
          href="/resume.pdf"
          class="text-sm text-zinc-600 dark:text-zinc-400 hover:text-accent dark:hover:text-accent transition-colors"
        >
          My resume →
        </a>
      </div>

      <p class="text-sm text-zinc-500 dark:text-zinc-500">
        © Copyright 2025, David Mainoo. All rights reserved
      </p>
    </div>
  </div>
</footer>
