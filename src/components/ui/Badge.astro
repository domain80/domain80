---
interface Props {
  variant?: "category" | "tech";
  class?: string;
}

const { variant = "category", class: className = "" } = Astro.props;

const variants = {
  category: "bg-accent/10 text-accent",
  tech: "bg-zinc-100 dark:bg-zinc-800 text-zinc-700 dark:text-zinc-300",
};

const classes = `inline-block px-2 py-1 text-xs font-medium rounded ${variants[variant]} ${className}`;
---

<span class={classes}>
  <slot />
</span>
